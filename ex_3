def fib(n):
    if n == 1:
        return 1
    if n == 2:
        return 1
    else:
        return fib(n-1)+fib(n-2)


def check(a):
    n = 1
    while True:
        if a > fib(n):
            n += 1
        else:
            if a < fib(n):
                print("Введенный элемент не явлется числом Фибоначчи")
                break
            else:
                print("Введенный элемент является числом Фибоначчи")
                break


print("Введите число: ")
while True:
    try:
        a = float(input())
        break
    except ValueError:
        print("Введенный элемент не является числом, повторите ввод: ")

check(a)
